<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SilentMoon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text_grey</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="lineHeight">17dp</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">38dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="lineHeight">15dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Button.IconButton">
        <item name="android:paddingStart">29dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="Button.IconButton.Ghost">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/button_almost_white</item>
        <item name="backgroundTint">#00000000</item>
    </style>

    <style name="Chip" parent="ShapeAppearanceOverlay.MaterialComponents.Chip">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="chipStrokeColor">@color/chip_stroke_selector</item>
        <item name="chipBackgroundColor">@color/chip_bg_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="textStartPadding">0dp</item>
    </style>

    <style name="TimePicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/time_picker_black</item>
        <item name="android:colorControlNormal">@color/number_picker_divider</item>
        <item name="android:background">@drawable/bg_time_picker</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="Widget.MaterialComponents.FloatingActionButton.MyFAB">
        <item name="tint">@null</item>
        <item name="maxImageSize">55dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>
</resources>