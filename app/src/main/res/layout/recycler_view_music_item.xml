<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemMusicNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/music_v2_focus_attention"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/itemMusicIconImageView"
        app:layout_constraintTop_toTopOf="@+id/itemMusicIconImageView" />

    <TextView
        android:id="@+id/itemMusicDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.05"
        android:text="@string/sleep_music_duration"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemMusicIconImageView"
        app:layout_constraintStart_toEndOf="@+id/itemMusicIconImageView"
        app:layout_constraintTop_toBottomOf="@+id/itemMusicNameTextView" />

    <ImageView
        android:id="@+id/itemMusicIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_course_details_selected_music" />

</androidx.constraintlayout.widget.ConstraintLayout>